@model Endpoint.Site.Models.ReportsControllerModels.AddPeriodViewModel

@{
    ViewData["Title"] = "AddPeriod";
}

<h1>ایجاد بازه جدید</h1>


@if(ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}


	<div class="row justify-content-md-center">
		<div class="col-md-6">
			<div class="card">
				<div class="card-header">
					<div class="card-title-wrap bar-primary">
						<h2 class="card-title" id="basic-layout-card-center">افزودن بازه</h2>
					</div>
				</div>
				<div class="card-body">
					<div class="px-3">
						<form class="form" asp-action="AddPeriod">
							<div class="form-body">

								<div class="form-group">
									<label for="periodName">نام بازه</label>
									<input id="periodName" asp-for="PeriodName" class="form-control" />
									<span asp-validation-for="PeriodName" class="text-danger"></span>
								</div>

								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<label for="startPeriod">تاریخ شروع بازه</label>
											<input id="startPeriod" asp-for="StartPeriodDate" class="date form-control" type="text" value="@(Model.StartPeriodDate)" />
											<span asp-validation-for="StartPeriodDate" class="text-danger"></span>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="finishPeriod">تاریخ پایان بازه</label>
											<input id="finishPeriod" asp-for="FinishPeriodDate" class="date form-control" type="text" value="@(Model.FinishPeriodDate)" />
											<span asp-validation-for="FinishPeriodDate" class="text-danger"></span>
										</div>
									</div>
								</div>

								<div class="form-group">
									<label for="periodDetail">توضیحات بازه</label>
									<textarea id="periodDetail" asp-for="PeriodDescription" class="form-control" rows="8"></textarea>
									<span asp-validation-for="PeriodDescription" class="text-danger"></span>
								</div>

							</div>

							<div class="form-actions center">
								<a asp-action="PeriodsList">
									<button type="button" class="btn btn-danger mr-1">
										<i class="icon-trash"></i> لغو
									</button>
								</a>
								<button type="submit" class="btn btn-success">
									<i class="icon-note"></i> ذخیره
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>






@section Scripts{
<script src="~/js/persian-date.min.js"></script>


<script src="~/js/persian-datepicker.min.js"></script>

<script type="text/javascript">

    $(document).ready(function() {
      $(".date").pDatepicker({
          initialValue:true,
          initialValueType:'persian',
          calendar:{
        persian: {
            locale: 'en'
        }
    },
          format:'L',
      });
    });
</script>



}













