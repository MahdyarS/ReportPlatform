@model Endpoint.Site.Models.ReportsControllerModels.ReportToAddViewModel

@{
    ViewData["Title"] = "AddNewReport";
}

<h1>ثبت گزارش کار</h1>
@if (ViewBag.Error != null && ViewBag.Error != "")
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form asp-controller="Reports" asp-action="AddNewReport" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <table class="table">
        <thead>
            <tr>
                <td>تاریخ</td>
                <td>ساعت شروع کار</td>
                <td>ساعت پایان کار</td>
                <td>غیرحضوری</td>
                <td class="col-6">توضیحات</td>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    <input type="text" id="date" asp-for="Date" class="form-control">
                    <span asp-validation-for="Date" class="text-danger"></span>

                </td>
                <td>
                    <input type="time" asp-for="BeginningTime" class="form-control" />
                    <span asp-validation-for="BeginningTime" class="text-danger"></span>

                </td>
                <td>
                    <input type="time" asp-for="FinishTime" class="form-control" />
                    <span asp-validation-for="FinishTime" class="text-danger"></span>

                </td>
                <td>
                    @*<input asp-for="IsRemote" />*@
                    <input type="checkbox" data-val="true" data-val-required="این فیلد الزامیست!" id="IsRemote" name="IsRemote" value="true">
                </td>
                <td class="col-6">
                    <textarea rows="8" class="col-12 form-control" asp-for="ReportsDetail"></textarea>
                    <span asp-validation-for="ReportsDetail" class="text-danger"></span>

                </td>
            </tr>

        </tbody>
    </table>
    <button class="btn btn-primary" type="submit">ثبت گزارش</button>
</form>

@section Scripts{
<script src="~/js/persian-date.min.js"></script>


<script src="~/js/persian-datepicker.min.js"></script>

<script type="text/javascript">

    $(document).ready(function() {
      $("#date").pDatepicker({
          initialValue:true,
          initialValueType:'persian',

          calendar:{
        persian: {
            locale: 'en'
        }
    },
          format:'L',
      });
    });
</script>



}

